<h3>User Roles For Account</h3>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content">
      <div class="row">
        <div class="col-lg-4">
          <div class="ibox float-e-margins">
            <div class="ibox-title">
              <h5>User Roles <span class="badge"> <%= @roles.count %></span></h5>
            </div>
<div class="ibox-content">
  <div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @roles.each do |role| %>
          <tr>
            <td><%= role.name %></td>
            <td><%= link_to edit_admin_role_path(role) do %>
              <span class="fa fa-edit"></span>
              <% end %>
            </td>
            <td><%= link_to admin_role_path(role), method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="fa fa-trash"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to "New Role", new_admin_role_path, :class => "btn btn-primary" %>
</div></div></div></div></div></div></div>
  </div>
</div>
