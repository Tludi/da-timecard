
<h1>Tasks</h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Task Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= link_to 'Show', admin_task_path(t) %></td>
        <td><%= link_to 'Edit', edit_admin_task_path(t) %></td>
        <td><%= link_to 'Delete', admin_task_path(t), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Task", new_admin_task_path, :class => "btn btn-primary" %>
