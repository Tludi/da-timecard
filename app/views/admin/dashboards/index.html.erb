<!-- Admin Dashboard index.html.erb -->
<p id="notice"><%= notice %></p>
<h3>Admin Dashboard</h3>
<p>Account: <%= current_user.account.name %></p>
<p>Time Zone: <%= current_user.account.time_zone %></p>
<p>Time Now: <%= Time.zone.now %></p>


<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content">
      <div class="row">
        <div class="col-lg-4">
          <div class="ibox float-e-margins">
            <div class="ibox-title">
              <h5>Projects <span class="badge"> <%= @projects.count %></span></h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#">Config option 1</a>
                        </li>
                        <li><a href="#">Config option 2</a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Projects Table  -->
            <div class="ibox-content">
              <div>
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Project Name</th>
                      <th></th>
                      <th></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @projects.each do |project| %>
                      <tr>
                        <td><%= link_to project.name, admin_project_path(project) %></td>
                        <td><%= link_to edit_admin_project_path(project) do %>
                          <span class="fa fa-edit"></span>
                          <% end %>
                        </td>
                        <td><%= link_to admin_projects_path(project), method: :delete, data: { confirm: 'Are you sure?' } do %>
                          <span class="fa fa-trash"></span>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                <br>

                <%= link_to 'New Project', new_admin_project_path, :class => "btn btn-primary" %>

              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-8">
          <div class="ibox float-e-margins">
            <div class="ibox-title">
              <h5>Users <span class="badge"> <%= @users.count %></span></h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#">Config option 1</a>
                        </li>
                        <li><a href="#">Config option 2</a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- User Table  -->
            <div class="ibox-content">
              <div>
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Role</th>
                      <th></th>
                      <th></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @users.each do |user| %>
                      <tr>
                        <td><%= link_to user.fullName, admin_user_path(user) %></td>
                        <td><%= user.email %></td>
                        <td><%= user.role %></td>
                        <td><%= link_to edit_admin_user_path(user) do %>
                          <span class="fa fa-edit"></span>
                          <% end %>
                        </td>
                        <td><%= link_to admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } do %>
                          <span class="fa fa-trash"></span>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>

                <br>

                <%= link_to 'New User', new_admin_user_path, :class => "btn btn-primary" %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
