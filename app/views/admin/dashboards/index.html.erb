<!-- Admin Dashboard index.html.erb -->
<p id="notice"><%= notice %></p>
<h3>Admin Dashboard</h3>
<p>Account: <%= current_user.account.name %></p>
<p>Time Zone: <%= current_user.account.time_zone %></p>
<p>Time Now: <%= Time.zone.now %></p>

<h1>Projects</h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Project Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= link_to 'Show', admin_project_path(project) %></td>
        <td><%= link_to 'Edit', edit_admin_project_path(project) %></td>
        <td><%= link_to 'Delete', admin_projects_path(project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Project', new_admin_project_path, :class => "btn btn-primary" %>

<hr>

<h1>Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Role</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstName %></td>
        <td><%= user.lastName %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_admin_user_path, :class => "btn btn-primary" %>

<hr>

<hr>
