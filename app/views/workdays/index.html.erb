
  <p id="notice"><%= notice %></p>

  <h1>Workdays</h1>
  <div class="container">

    <h3><%= @user.fullName %></h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Hours Worked</th>
          <th>Project</th>
          <th>Notes</th>
          <th>Time Punches</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @workdays.each do |workday| %>
          <tr>
            <td><%= workday.dayDate.strftime('%m/%d/%Y') %></td>
            <td><%= workday.hoursWorked %></td>
            <td><%= workday.project.name %></td>
            <td><%= workday.notes %></td>
            <td><%= workday.timePunches.count %></td>
            <td><%= link_to 'Show', workday %></td>
            <% if current_user.role == "Supervisor" %>
              <td><%= link_to 'Edit', edit_workday_path(workday) %></td>
              <td><%= link_to 'Delete', workday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>


    <br>

    <%= link_to 'New Workday', new_workday_path, :class => "btn btn-primary" %>
  </div>
