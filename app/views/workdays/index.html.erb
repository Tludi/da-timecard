
  <p id="notice"><%= notice %></p>

  <h1>Workdays</h1>
  <div class="container">
    <% @users.each do |u| %>
    <h3><%= u.firstName %></h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Hoursworked</th>
          <th>User</th>
          <th>Daydate</th>
          <th>Project</th>
          <th>Notes</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% u.workdays.each do |workday| %>
          <tr>
            <td><%= workday.hoursWorked %></td>
            <td><%= "#{workday.user.firstName} #{workday.user.lastName}" %></td>
            <td><%= workday.dayDate %></td>
            <td><%= workday.project.name %></td>
            <td><%= workday.notes %></td>
            <td><%= link_to 'Show', workday %></td>
            <td><%= link_to 'Edit', edit_workday_path(workday) %></td>
            <td><%= link_to 'Destroy', workday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end -%>

    <br>

    <%= link_to 'New Workday', new_workday_path, :class => "btn btn-primary" %>
  </div>
