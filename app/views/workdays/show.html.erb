<p id="notice"><%= notice %></p>
<p><%= Time.now.strftime("%l:%M %P") %></p>
<p>
  <strong>Hours Worked:</strong>
  <%= @hoursWorked %>
</p>

<p>
  <strong>User:</strong>
  <%= current_user.firstName + " " + current_user.lastName %>
</p>

<p>
  <strong>Date:</strong>
  <%= local_time(@workday.created_at, '%m %d %Y') %>
</p>

<p>
  <strong>Project:</strong>
  <%= @current_project.name %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @workday.notes %>
</p>
<hr>

<%= render 'form' %>

<div class="row row-centered">
    <div class="col-md-2"></div>
  <% @currentWorkdayTimePunches.each do |tp| %>
    <div class="col-md-2 col-centered" >
      <div class="well">
        <%= local_time(tp.created_at, '%l:%M %P') %>
        <% if tp.clockedInStatus %>
          <p>In</p>
        <% else %>
          <p>Out</p>
        <% end %>
        <%= link_to 'Destroy', tp, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>
</div>


<hr>

