<p id="notice"><%= notice %></p>
<p>Time now: <%= Time.now.strftime("%l:%M %P") %></p>
<p>Time now utc: <%= Time.now.utc.strftime("%l:%M %P") %></p>
<p>created at: <%= @workday.created_at.strftime('%B %e, %Y %l:%M%P') %></p>
<p>Local time created_at <%= local_time(@workday.created_at, '%B %e, %Y %l:%M%P')%></p>
<p>Local time time.now: <%= local_time(Time.now) %></p>
<p>Local date: <%= local_date(Time.now) %></p>
<hr>
<p>
  <strong>Hours Worked:</strong>
  <%= @hoursWorked %>
</p>

<p>
  <strong>User:</strong>
  <%= current_user.firstName + " " + current_user.lastName %>
</p>

<p>
  <strong>Date:</strong>
  <%= @workday.dayDate.strftime("%B %e, %Y") %>
</p>

<p>
  <%= render 'form' %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @workday.notes %>
</p>



<hr>
<%= render 'timePunchForm' %>

<hr>

<% if @timePunches %>
  <% @timePunches.each do |tp| %>
    <p><%= tp.entry %></p>
    <p><%= @timePunches.count %></p>
  <% end %>
<% end %>


<hr>
<p>Today is: <%= Date.today %></p>
<p>Time now is: <%= Time.now %></p>
<div class="row row-centered">
    <div class="col-md-2"></div>
  <% @currentWorkdayTimePunches.each do |tp| %>
    <div class="col-md-2 col-centered" >
      <div class="well">
        <%= Time.now %>
        <%= local_time(tp.created_at, '%l:%M %P') %>
        <% if tp.clockedInStatus %>
          <p>In</p>
        <% else %>
          <p>Out</p>
        <% end %>
        <%= link_to 'Destroy', tp, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>
</div>


<hr>

