<!-- _timePunchForm.html.erb -->
<h4>Current Status</h4>
<% if @timePunchStatus %>
  <h4 class="label label-success">Clocked In</h4>
<% else %>
  <h4 class="label label-danger">Clocked Out</h4>
<% end %>

<br>
<br>

<%= form_for [@workday, @timePunch] do |f| -%>
  <div class="actions">
    <%= f.submit "Clock In/Out", class: "btn btn-primary clockButton"%>
  </div>
<% end -%>