
<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Firstname:</strong>
    <%= @user.firstName %>
  </p>

  <p>
    <strong>Lastname:</strong>
    <%= @user.lastName %>
  </p>

  <p>
    <strong>workdays:</strong>
    <%= @user.workdays.count %>
  </p>

  <table class="table table-striped">
      <thead>
        <tr>
          <th>Hoursworked</th>
          <th>Daydate</th>
          <th>Project</th>
          <th>Notes</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @workdays.each do |workday| %>
          <tr>
            <td><%= workday.hoursWorked %></td>
            <td><%= workday.dayDate %></td>
            <td><%= workday.project_id %></td>
            <td><%= workday.notes %></td>
            <td><%= link_to 'Show', workday %></td>
            <td><%= link_to 'Edit', edit_workday_path(workday) %></td>
            <td><%= link_to 'Delete', workday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>






  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
</div>